{
  "name": "@repo/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/index.css",
    "./components/*": "./src/components/*",
    "./utils": "./src/lib/utils",
    "./card": "./src/card.tsx",
    "./ui": "./src/components/ui/index.ts",
    "./index": "./src/index.tsx"
  
